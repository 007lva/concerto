/*##########################################################################*/
/*  Form Minimals  */
/*##########################################################################*/


@import "variables";
@import "mixins";

//////////////////

form {
	
	h1 {
		clear: both;
		color: #333;
    	font-size: 1.35em;
    	font-weight: normal;
    	border-bottom: solid 1px #999;
    	padding-top: 22px;
    	margin-bottom: 14px; 
	}
	
	.fields {
		
		.field {
			margin-bottom:10px;

			label {
				color:#666;
				font-family: $sans-headers;
				font-size:1em;
				letter-spacing:0em;
			}

			.inputs, .fieldbox {
	      		clear:both;
	      		margin-bottom: 12px; 
			}

	    	.inputs input, .fieldbox input {
	      		//width: 600px;
	      		padding: 2px;
	      		background: #fefefe image-url('layout/forms/textfield_bg.png') top left repeat-x;
	      		border: solid 1px #999; 
			}

	    	.inputs {

	      		input {
					width:90%;
				}		
		
				textarea {
	        		width:90%;
					//width: 600px;
	        		height: 100px;
	        		padding: 2px;
	        		background: #fefefe image-url('layout/forms/textfield_bg.png') top left repeat-x;
	        		border: solid 1px #999; 
				}

	      		input.alert {
	        		border: solid 2px #cc3333; 
				} 

			}

	    	.fieldbox {
	      		border: solid 1px #ccc;
	      		padding: 4px 6px;
				@include rounded(6px, 6px, 6px, 6px);
			}

		}
		
	}

  	.datetime input {
    	padding-top: 3px !important;
    	padding-bottom: 3px !important; 
	}
	
  	.submit_bar {
    	background: white image-url('layout/C/submit_bar_bg.png') top left repeat-x;
    	margin-top: 30px;
    	padding: 16px 20px;
    	text-align: right; 
	}
	 
}

// Special Rules:
.C form .fields {
	padding:12px 0px 0px 20px;
}
