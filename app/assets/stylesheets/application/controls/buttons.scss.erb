// BUTTON STYLES
// -------------


// Colors
// ------

.btn, .button, form .submit_bar input {
  // Set text color
  &.primary,
  &.primary:hover,
  &.danger,
  &.danger:hover,
  &.success,
  &.success:hover,
  &.info,
  &.info:hover {
    text-shadow: 0 -1px 0 rgba(0,0,0,.25);
    color: $white
  }
  &.primary.active,
  &.danger.active,
  &.success.active,
  &.info.active {
    color: rgba(255,255,255,.75);
  }
  //&.primary {
  //  .buttonBackground($primaryButtonBackground, spin(@primaryButtonBackground, 20));
  //}
  // Danger and error appear as red
  &.danger {
    @include vertical-gradient(#ee5f5b, #bd362f);
  }
  // Success appears as green
  &.success {
    @include vertical-gradient(#62c462, #51a351);
  }
  // Info appears as a neutral blue
  &.info {
    @include vertical-gradient(#5bc0de, #2f96b4);
  }
}

// Base styles
// -----------

.btn, .button, form .submit_bar input {
  // Button Base
  display: inline-block;
  padding: 4px 10px 4px;
  @include no-box-shadow;
  @include border-radius(4px);
  font-size: $basefont - 1;
  cursor: pointer;
  font-weight: bold;
  color: $white;
  letter-spacing: -0.07em;
  text-shadow: 0 -1px 0px $concerto-blue-1;
  text-decoration: none;
  background: image-url('layout/button_norm_states.png') top left repeat-x;
  border: solid 1px #003366;
  
  $shadow: inset 0 1px 0 rgba(255,255,255,.2), 0 1px 2px rgba(0,0,0,.05);
  @include box-shadow($shadow);

  @include ie7-restore-left-whitespace;

  &:hover {
    background-position: 100% -26px;
    color: #000033;
    text-shadow: 0 -1px #eee;
    border: solid 1px #2f84da;
    text-decoration: none;
    background-color: lighten($white, 10%);

  }

  // Focus state for keyboard and accessibility
  &:focus {
    //.tab-focus();
  }

  // Active and Disabled states
  &.active,
  &:active {
    @include box-shadow(inset 0 0 6px $black);
    background-position: 100% 100%;
    color: #333;
    text-shadow: 0 1px #eee;
    outline: none;
    border: solid 1px $black;
  }
  &.disabled,
  &[disabled] {
    cursor: default;
    background-color: darken($white, 10%);
    @include opacity(65);
    @include box-shadow(none);
  }

  // Button Sizes
  &.large {
    padding: 9px 14px;
    //font-size: $baseFontSize + 2px;
    line-height: normal;
    @include border-radius(5px);
  }
  &.large .icon {
    margin-top: 1px;
  }
  &.small {
    padding: 5px 9px;
    //font-size: $baseFontSize - 2px;
    //line-height: $baseLineHeight - 2px;
  }
  &.small .icon {
    margin-top: -1px;
  }


  	// back button:
	&.back {
		@include no-box-shadow;
		@include border-radius-corners(0px, 4px, 4px, 0px);
		background: transparent image-url('layout/button_back_states.png') no-repeat scroll top left;
   	font-size: 0.7em;
   	border: 0;
   	border-right: solid 1px #396bab;
   	height: 18px;
   	padding: 4px 12px 0px 20px;

   	&:hover {
	 		@include no-box-shadow;
			background-position: 0% -22px;
   		border: 0;
   		border-right: solid 1px #53abe7;
		}
		
    &:active {
   		@include no-box-shadow;
			background-position: 0% 100%;
   		border: 0;
   		border-right: solid 1px #999;
			height: 17px;
			padding: 5px 12px 0px 20px;
		} 
			
	}
	
	&.time, &.date {
		display: inline-block;
		padding: 0px;
		float: none;
		cursor: pointer;
		text-decoration: none;
		margin-left: 5px;
		vertical-align: top; 
	}
	
	// date and time buttons:
	&.time {
		width: 26px;
		height: 26px;
		background: image-url('layout/button_time_states.png') top left no-repeat; 
	}
		
	&.date {
 		width: 26px;
 		height: 26px;
 		background: image-url('layout/button_date_states.png') top left no-repeat; 
	}
	
 	&.time:hover, &.date:hover {
   	background-position: 100% -26px;
   	color: #000033;
   	text-shadow: 0 -1px #eeeeee;
   	border: solid 1px #2f84da; 
	}
	
	&.time:active, &.date:active {
   	@include box-shadow(inset 0 0 6px #000);
		background-position: 100% 100%;
   	color: #333;
   	text-shadow: 0 1px #eee;
   	outline: none;
   	border: solid 1px #000; 
	}

}

// Help Firefox not be a jerk about adding extra padding to buttons
button.btn,
input[type="submit"].btn {
  &::-moz-focus-inner {
  	padding: 0;
  	border: 0;
  }

  // IE7 has some default padding on button controls
  *padding-top: 2px;
  *padding-bottom: 2px;
  &.large {
    *padding-top: 7px;
    *padding-bottom: 7px;
  }
  &.small {
    *padding-top: 3px;
    *padding-bottom: 3px;
  }
}
