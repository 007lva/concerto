/*##########################################################################*/
/*  Buttons  */
/*##########################################################################*/


@import "../base/variables";
@import "../base/mixins";

//////////////////


// this mixin is used as a template for all buttons:
@mixin button-base {
	@include no-box-shadow;
	@include border-radius(4px);
	padding:5px 20px 5px 20px;
	float: left;
  	cursor: pointer;
	height: 16px;
  	font-weight: bold;
  	color: #FFF;
  	letter-spacing: -0.07em;
  	text-shadow: 0 -1px #003366;
  	font-size: 0.8em;
  	margin-right: 6px;
  	text-decoration: none;
  	background: image-url('layout/button_norm_states.png') top left repeat-x;
  	border: solid 1px #003366;

	&:hover {
		background-position: 100% -26px;
	  	color: #000033;
	  	text-shadow: 0 -1px #eeeeee;
	  	border: solid 1px #2f84da;
	}
	
	&:active {
		@include box-shadow(inset 0 0 6px #000);
		padding: 6px 20px 4px 20px;
		background-position: 100% 100%;
	  	color: #333;
	  	text-shadow: 0 1px #eee;
	  	outline: none;
	  	border: solid 1px #000;
	}
	
	&:visited {
		color:#FFF;
	}
	
	&:visited:hover {
		color: #000033;
	  	text-shadow: 0 -1px #eeeeee;
	}
	
}

// Link Buttons
a.button {
	@include button-base;
	
	// back button:
	&.back {
		@include no-box-shadow;
		@include border-radius-corners(0px, 4px, 4px, 0px);
		background: transparent image-url('layout/button_back_states.png') no-repeat scroll top left;
    	font-size: 0.7em;
    	border: 0;
    	border-right: solid 1px #396bab;
    	height: 18px;
    	padding: 4px 12px 0px 20px;

    	&:hover {
      		@include no-box-shadow;
			background-position: 0% -22px;
      		border: 0;
      		border-right: solid 1px #53abe7;
		}
		
    	&:active {
      		@include no-box-shadow;
			background-position: 0% 100%;
      		border: 0;
      		border-right: solid 1px #999;
			height: 17px;
			padding: 5px 12px 0px 20px;
		} 	
	}
	
	&.time, &.date {
  		display: inline-block;
  		padding: 0px;
  		float: none;
  		cursor: pointer;
  		text-decoration: none;
  		margin-left: 5px;
  		vertical-align: top; 
	}
	
	// date and time buttons:
	&.time {
  		width: 26px;
  		height: 26px;
  		background: image-url('layout/button_time_states.png') top left no-repeat; 
	}
		
	&.date {
 		width: 26px;
  		height: 26px;
  		background: image-url('layout/button_date_states.png') top left no-repeat; 
	}
	
  	&.time:hover, &.date:hover {
    	background-position: 100% -26px;
    	color: #000033;
    	text-shadow: 0 -1px #eeeeee;
    	border: solid 1px #2f84da; 
	}
	
	&.time:active, &.date:active {
    	@include box-shadow(inset 0 0 6px #000);
		background-position: 100% 100%;
    	color: #333;
    	text-shadow: 0 1px #eee;
    	outline: none;
    	border: solid 1px #000; 
	}
	
}

// Submit input button styled like link buttons:
form .submit_bar input {
	@include button-base;
	height:auto;
}

/* Special Rules: */

.C-header_right a.button {
  	margin-right: 0px;
  	margin-left: 6px; 
}
