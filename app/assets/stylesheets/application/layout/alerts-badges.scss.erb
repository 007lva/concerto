// alerts-badges.scss.erb

.badge {
  @include border-radius(2px);
  background: $concerto-blue-4;
  color: $white;
  font-family: $sans-body;
  display: inline;
  font-size: 10px;
  font-weight: bold;
  padding: 1px 4px;

  &.alert {
    background-color: $red;
  }
}

.link-hl .badge {
  position: relative;
  bottom: 2px;
  margin-right: 3px;
}

// Flash Notice Banner
// Only appears for a short time to show flash[:notice] text 
// Appears to "slide" from behind the top menu, then slide back up
#flash-banner {
  background: $black;
  opacity: 0.8;
  padding: 4px 12px;
  
  // initial state: is rendered at top of screen behind the topbar
  position: absolute;
  width: 100%;
  top: 0px;
  left: 0px;
  z-index: 1;
  
  p {
    opacity: 1.0;
    color: $white;
    margin-bottom: 0px;
  }
}
