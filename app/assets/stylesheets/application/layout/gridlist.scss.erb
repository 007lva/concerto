/*##########################################################################*/
/*  Grid Lists (GL): Graphical Thumbnail/Icon Grids  */
/*##########################################################################*/


//////////////////


@mixin gridlist-item {
	list-style: none;
	float: left;
	min-width: 150px;
	width:20%;
	height:80px;
	text-align:center;
	
	a {	 // in this case, the singular gridlist item is ul li a
		padding: 8px;
		border-right: solid 1px $grayLight;
		border-bottom: solid 1px $grayLight;
		height: 64px;
		display: block;
		text-decoration:none;
		
		&:visited {
			color:#666;
		}
		
		// these elements come along for the ride by bringing in gridlist-item mixin:
		img { }
		.content {
			h1 { }
			p {	}
		}
		
	}
	
	img {
		@include box-shadow(0 3px 2px #ababab);
		margin-bottom:6px;
	}

	.content {
		h1 {
			font-size: 1.2em;
 			color: #333;
 			background:none;
 			padding: 0px;
 			margin: 0px;
 			font-weight: bold;
 			text-align: center;
		}
		
		p {
			font-size:0.8em;
		}
		
	}
	
	&:hover {
		background:#ccccff;
	}
}

ul.GL {
	border-top:solid 1px $grayLight;
	margin: 0px;
	padding: 0px;
	
	li {
		@include gridlist-item;
		
	}
	
}
