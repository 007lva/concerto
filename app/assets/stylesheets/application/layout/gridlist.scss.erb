/*##########################################################################*/
/*  Grid Lists (GL): Graphical Thumbnail/Icon Grids  */
/*##########################################################################*/


//////////////////


@mixin gridlist-item {
	list-style: none;
	float: left;
	min-width: 150px;
	width:20%;
	min-height:80px;
	
	div {	 // in this case, the singular gridlist item is ul li a
		padding: 12px;
		border-right: solid 1px $grayLight;
		border-bottom: solid 1px $grayLight;
		min-height: 64px;
		display: block;
		text-decoration:none;
		
		// these elements come along for the ride by bringing in gridlist-item mixin:
		b {
			color: $black;
		}
		
		.controls {
			background: $grayLightest;
			display: block;
			margin-top: 4px;
			padding: 4px;
		}
		
	}
	
	img {
		@extend .with-shadow;
		float: left;
		margin-bottom:6px;
		margin-right:10px;
	}

	.content {
		h1 {
			font-size: 1.2em;
 			color: #333;
 			background:none;
 			padding: 0px;
 			margin: 0px;
 			font-weight: bold;
 			text-align: center;
		}
		
		p {
			font-size:0.8em;
		}
		
	}
	
}

ul.GL {
	border-top:solid 1px $grayLight;
	margin: 0px;
	padding: 0px;
	
	li {
		@include gridlist-item;
		
	}
	
}
