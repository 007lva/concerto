/*  Modal Selectors  */
/*##########################################################################*/


//////////////////

.MS-frame {
	header h1 {
   	display: block;
   	color: #666;
   	margin-left: 30px;
   	font-size: 1.8em;
   	text-shadow: 0 1px #FFF;
   	letter-spacing: -0.05em;
   	margin-bottom: 4px; 
	}
	
 	.MS-outer {
   	@include border-radius(20px);
		background: image-url('layout/MS/outer.png') repeat;
   	padding: 6px;
		margin-bottom: 22px; 
	}
	
 	article {
   	@include border-radius(14px);
		display: block;
   	background: image-url('layout/MS/inner.png') repeat;
		padding: 17px;
	} 
	
	// Modal Selector (ML)
	ul.MS {
		@extend ul.GL;  // inherit from ul.GL element (_gridlist.scss.erb)

		padding: 0px;
		margin: 0px -6px;

		li {
			margin: 0px 6px;

			a {
				color: #FFF;
  			text-decoration: none;
				@include border-radius(8px);
				background: image-url('layout/MS/iconlist_inactive.png') repeat;
  			border: solid 1px #999;
  			opacity: 0.5;
				color:#FFF;

	  		&:hover {
    			opacity: 1; 
					background:#333;
				}
				
				img {
					@include no-box-shadow;
				}

	  		h2 {
    			font-size: 1.5em;
    			color: #FFF !important; 
				}

			}
			
		}
		
	}
	
}
