// BREADCRUMBS
// -----------

.breadcrumb {
  padding: 7px 14px;
  margin: 0 0 $baseline;
  @include vertical-gradient(#ffffff, #f5f5f5);
  border: 1px solid #ddd;
  @include border-radius(3px);
  @include box-shadow(inset 0 1px 0 $white);
  li {
    display: inline;
    text-shadow: 0 1px 0 $white;
  }
  .divider {
    padding: 0 5px;
    color: $grayLight;
  }
  .active a {
    color: $grayDark;
  }
}


// TABS AND PILLS
//---------------

// Common styles
.pills {
  margin: 0 0 $baseline;
  padding: 0;
  list-style: none;
  @include clearfix();
  > li {
    float: left;
    > a {
      display: block;
    }
  }
}


// Dropdown Menus
// Use the .menu class on any <li> element within the topbar or ul.tabs and you'll get some superfancy dropdowns
// li.menu for backwards compatibility
// The link that is clicked to toggle the dropdown
// a.menu for backwards compatibility
.dropdown-toggle:after {
  width: 0;
  height: 0;
  display: inline-block;
  content: "&darr;";
  text-indent: -99999px;
  vertical-align: top;
  margin-top: 8px;
  margin-left: 4px;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-top: 4px solid $white;
  @include opacity(50);
}
// The dropdown panel
// .menu-dropdown for backwards compatibility
.dropdown-contents {
  background: $white;
  display: none; // None by default, but block on "open" of the menu
  position: absolute;
  z-index: 900;
  min-width: 160px;
  _width: 160px;
  margin-left: 0; // override default ul styles
  margin-right: 0;
  margin-top: 2px;
  zoom: 1; // do we need this?
  border-color: #999;
  border-color: rgba(0,0,0,.4);
  border-style: solid;
  border-width: 1px;
  @include border-radius-corners(0px, 0px, 6px, 6px);
  @include box-shadow(0 0 13px rgba(0,0,0,0.5) );

  &.small { 
    min-width: 160px; 
    max-width: 220px;
    _width: 160px;
  }
  
  &.medium {
    min-width: 300px;
    max-width: 360px;
    _width: 300px;
  }
  
  &.large {
    min-width: 600px;
    max-width: 660px;
    _width: 600px;
  }

  h3 {
    background: rgba(0,0,0,.4);
    padding:12px 12px 6px 6px;
    text-shadow: 0 -1px 0px $grayDark;
    color: $white;
  }

  a.close {
    float: right;
    font-weight: bold;
    color: $grayDark;
    width: 8px;
    height: 8px;
    margin-right: 8px;

    &:hover {
      color: $black;
      text-decoration: none;
    }
  }
}




