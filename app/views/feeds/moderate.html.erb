<section class="viewblock">
  <header id="browse-header" class="viewblock-header">
    <div class="viewblock-header_right">
      <div class="status-block">
        <label>PENDING</label>
        <span><%= @pending_submissions_count %></span>
      </div>
    </div>
    <div class="default-padding">
      <h1>Contents Pending Your Moderation</h1>
    </div>
  </header>
  <div id="browse-body" class="viewblock-cont">
    
    <% if @feeds_with_pending.count > 0 %>
      <div class="default-padding">
        <h2><%= pluralize(@feeds_with_pending.count, "feed") %> with pending content</h2>
      </div>

      <ul class="list-stacked">
        <% @feeds_with_pending.each do |pending_feed| %>
        <li>
          <h3>
            <%= link_to feed_submissions_path(pending_feed), :remote => true, :class => "link-hl" do %>
              <span class="badge action"><%= pending_feed.pending_contents.count %></span> <%= pending_feed.name %>
            <% end %>
          </h3>
        </li>
        <% end %>
      </ul>
    <% else %>
      <br />
      <div class="default-padding">
        <div class="alert alert-block alert-zero">
          <p class="alert-heading">Nothing to Moderate</p>
          <% if can? :create, Content %>All good for now! None of the feeds you moderate have any pending contents.<% end %>
        </div>
      </div>
    <% end %>

    <div class="clear"></div>
  </div>
</section>
