<% if @feeds and @feeds.size > 0 %>
  <ul class="list-stacked">
    <% @feeds.each do |feed| %>
      <% if feed.approved_contents.size != 0 || feed.group.has_member?(current_user) %>
        <li>
          <h3>
            <%= link_to feed_submissions_path(feed), :class => "link-hl" do %>
              <span class="badge"><%= feed.approved_contents.active.count %></span> <%= feed.name %>
            <% end %>
            <small>&nbsp;&nbsp;<%= feed.description %></small>
          </h3>
          <% if feed.children.count > 0 %>
            <p class="indented">
              <%= t(:sub_feeds) %>:
              <% feed.children.each do |sub_feed| %>
                <%= link_to sub_feed.name, feed_submissions_path(sub_feed), :class => "link-hl" %>
              <% end %>
            </p>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <div class="default-padding">
    <div class="alert alert-block alert-zero">
      <p class="alert-heading">I'm afraid we're not in Kansas anymore.</p>
      There doesn't appear to be anything you can view on this Concerto network. You should <%= link_to t('.sign_in'), main_app.new_user_session_path %><% if can? :create, User %> or <%= link_to t('.sign_up'), main_app.new_user_registration_path %> and submit some content!<% end %>
    </div>
  </div>
<% end %>