<%= form_for([@screen, @field, @field_config]) do |f| %>
  <%= render :partial => "layouts/errors", :object => @field_config %>
  <fieldset>
    <div class="row-fluid">
      <div class="span4">
        <div class="clearfix">
          <%= f.label :key %>
          <div class="input">
            <%= f.text_field :key, :class => "input-xlarge", :autofocus => true %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.label :value %>
          <div class="input">
            <%= f.text_field :value, :class => "input-xlarge" %>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
  <div class="submit_bar actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
