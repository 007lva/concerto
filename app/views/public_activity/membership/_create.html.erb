<% adder = User.find(activity.parameters[:adder]) %>
<%= link_to adder.name, adder if adder%> <%= t('.added')%>
<% if activity.trackable %>
  <%= link_to activity.trackable.user.name, activity.trackable.user %> <%= t('.to_the')%> <%= link_to activity.trackable.group.name, activity.trackable.group %> <%= t('.group_as_a')%> <%= (activity.parameters[:level] == 9) ? t(".leader") : t(".regular_member") %>
<% else %>
  <%= t('.group_membership_removed')%>
<% end %>