<article>
  <div class="subnav clearfix">
  	<div class="pull-left" style="width:120px">
      <div class="dropdown-container">
        <a href="#" class="button dropdown-toggle js-dropdown-button" data-dropdown-pane="#jumptofeed">Jump to Feed...</a>
        <div id="jumptofeed" class="dropdown medium">
          <a href="#" class="close">x</a>
          <h3>Click on a feed to jump to it</h3>
          <% feeds = dfs_tree(Feed.roots) %>
          <% if feeds.empty? %>
          <p><%= t(:no_feeds) %></p>
          <% else %>
          <ul>
            <% feeds.each_with_index do |feed, i| %>
              <li><%= link_to feed_submissions_path(feed), :remote => true do %><%= feed.name %> <span class="count">(<%= feed.approved_contents.count %>)</span><% end %></li>
            <% end %>
          </ul>
          <% end %>
        </div>
      </div>
    </div>

					
  	<ul class="tabs">
  	  <% if @sub_feeds.size < 1 %>
  	  	<li class="legend">No Sub-feeds</li>
  	  <% else %>
  	  	<li class="legend">Sub-feeds:</li>
  	  <% end %>
  		<% @sub_feeds.each do |feed| %>
      <li><%= link_to feed_submissions_path(feed), :remote => true do %><%= feed.name %> <span class="count">(<%= feed.approved_contents.count %>)</span><% end %></li>
  		<% end %>
  	</ul>
					
  </div>
  <div id="content_holder">
				
  	<% if @submissions.size == 0 %>
    <div class="default-padding">
      <h3>Oops - there's no content inside this feed.</h3>
    </div>
    <% else %>
    <ul class="GL">
  		<% @submissions.each do |submission| %>
  	  <li>
  			<div>
  				<%= link_to image_tag("ph/grid_ph.jpg", :class => "with-shadow"), [submission.feed, submission], :remote => true %>
  				<b><%= link_to submission.content.name, [submission.feed, submission], :remote => true %></b>
  				<br />
  				<%= submission.content.start_time.strftime("%m/%d") %> to <%= submission.content.end_time.strftime("%m/%d") %>
  				<br />
  				<span class="controls">
  					<%= link_to "Moderate", '#', :class => "button small" %>
  				</span>
  			</div>
  		</li>
  		<% end %>
  	</ul>
		<% end %>
    		
  </div>
</article>
<div class="clear"></div>
