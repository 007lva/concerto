<% if !@contents.empty? %>
<table cellpadding="0" cellspacing="0" width="100%" class="docs">
 <thead>
	 <tr class="cat_title">
		<th style="text-align:right;"><%= t(:title)%></th>
		<th><%= t(:link)%></th>
		<th style="text-align:left;"><%= t(:description)%></th>
		<th><%= t(:submitted)%></th>
		<th><%= t(:updated)%></th>
		<th></th>
	 </tr>
 </thead>
 <tbody>
 <% @contents.each do |content| %>
 <tr class="<%= cycle('odd', 'even') %>">
  <td><%= link_to content do %><h2><%=h content.name %></h2><% end %></td>
  <td class="content_img">
   <%= link_to content do %>
    <%= image_tag("icons/icon_#{content.type}_40.png", {:alt => "View Content", :width => "40px", :height => "40px"}) %>
   <% end %>
  </td>
  <td><p><%=h content.data %></p></td>
  <td><%=h content.created_at.strftime('%D') unless content.updated_at.nil? %></td>
  <td><%=h content.updated_at.strftime('%D') unless content.updated_at.nil? %></td>
  <td>
  </td>
 </tr>
 <% end %>
 </tbody>
</table>
<% end %>
<div style="clear:both;"></div>
