<%= form_for(@content, :html => { :multipart => true }) do |f| %>
	<div class="fields">
		<%= render :partial => "contents/#{@content.type.underscore}/form", :locals => {:form => f} %>
  		<div class="field">
    		<%= hidden_field_tag :type, @content.type %>
  		</div>
  	</div>
	<div class="submit_bar actions">
    	<a class="button" href="#" onclick="this.blur();"><span>Submit</span></a>
		<%= f.submit %>
		<div class="clear"></div>
  	</div>
<% end %>