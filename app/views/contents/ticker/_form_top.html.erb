<fieldset>
  <legend><span><%=t('.type_your_message')%></span></legend>
  <div class="clearfix">
    <label><%=t('.ticker_text')%></label>
    <div class="input">
      <%= form.text_area :data, :class => 'word_count', :rows => 10, :autofocus => true %>
      <div><%= t('.characters') %>: <span id="char_count">0</span></div>
      <i>Some html is allowed, presentation on screens may vary from preview below, count includes html formatting</i> 
      <%= link_to 'Preview', { :controller => "contents", :action => 'ticker_preview', :method => :post, :remote => true }, { :id => "ticker-preview", :class => 'btn btn-mini' } %>
    </div>
  </div>
  <div class="input">
    <div class="ticker-preview"></div>
  </div>
</fieldset>
