<div class="row-fluid">
  <div class="span2">

    <section class="viewblock">
      <header class="viewblock-header">
        <h1 class="default-padding"><%= t(:edit_model, :model => Group.model_name.human) %></h1>
      </header>
      <div class="viewblock-cont clearfix">

        <% if @group.errors.any? %>
        <div class="alert alert-banner alert-error">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <h4><b><%= pluralize(@group.errors.count, "error") + " " + t(:prohibited_save, :model => Group.model_name.human.downcase) %></b></h4>
          <ul>
            <% @group.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-stacked">
        	<%= form_for(@group) do |f| %>
        
        		<fieldset>
        			<div class="clearfix">
        				<%= f.label :name %>
        				<div class="input">
        					<%= f.text_field :name, :class => "fillWidth", :autofocus => true %>
        				</div>
        			</div>
        
        			<div class="clearfix">
        				<%= f.label :narrative %>
        				<div class="input">
        					<%= f.text_area :narrative, :class => "fillWidth" %>
        				</div>
        			</div>
        		</fieldset>
        		
        		<div class="submit_bar actions">
        			<%= f.submit t(:update_model, :model => Group.model_name.human), :class => "btn primary" %>
        		</div>
        	<% end %>
        </div>
      </div>
    </section>

  </div>

  <div class="span10">

    <section class="viewblock no">
      <header class="viewblock-header">
        <h1 class="default-padding"><%= t('.change_group_memberships') %></h1>
      </header>
      <div class="viewblock-cont">
        <%= render 'edit_memberships' %>
      </div>
    </section>
  </div>
</div>
