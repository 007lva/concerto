<%= form_for(@screen) do |f| %>
	<% if @screen.errors.any? %>
	<div id="errorExplanation">
	  <h2><%= pluralize(@screen.errors.count, "error") %> prohibited this screen from being saved:</h2>
	  <ul>
	    <% @screen.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	  </ul>
	</div>
	<% end %>
	<div class="fields">
		<div class="field">
			<%= f.label :name %>
			<div class="inputs">
				<%= f.text_field :name %>
			</div>
		</div>
		<div class="field">
			<%= f.label :location %>
			<div class="inputs">
				<%= f.text_field :location %>
			</div>
		</div>
		<div class="field">
			<%= f.label :is_public %>
			<div class="inputs">
				<%= f.check_box :is_public %>
			</div>
		</div>        
		<div class="field">
			<%= f.label :owner %>
			<div class="inputs">
                          <% options = {'Users' => @users.map{|u| [u.name, "User-#{u.id}"]},
                                        'Groups' => @groups.map{|g| [g.name, "Group-#{g.id}"]}} %> 
                          <%= select_tag :owner, grouped_options_for_select(options, "#{@screen.owner_type}-#{@screen.owner_id}") %>
			</div>
		</div>		
		<div class="field">
			<%= f.label :template %>
			<div class="inputs">
				<%= f.collection_select :template_id, @templates, :id, :name %>
			</div>
		</div>
                <div class="field">
                        <%= f.label :width %>
                        <div class="inputs">
                                <%= f.text_field :width %>
                        </div>
                </div>
                <div class="field">
                        <%= f.label :height %>
                        <div class="inputs">
                                <%= f.text_field :height %>
                        </div>
                </div>
	</div>
	
	<div class="submit_bar actions">
	  	<%= f.submit %>
		<div class="clear"></div>
	</div>
<% end %>
