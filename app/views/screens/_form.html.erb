<%= form_for(@screen) do |f| %>
	<% if @screen.errors.any? %>
	<div id="errorExplanation">
	  <h2><%= pluralize(@screen.errors.count, "error") %> prohibited this screen from being saved:</h2>
	  <ul>
	    <% @screen.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	  </ul>
	</div>
	<% end %>

	<fieldset>
    <legend><span><%= t(:provide_details) %></span></legend>
		<div class="clearfix">
			<%= f.label :name %>
			<div class="input">
				<%= f.text_field :name, :class => "span6" %>
			</div>
		</div>
		
		<div class="clearfix">
			<%= f.label :location %>
			<div class="input">
				<%= f.text_field :location, :class => "span6" %>
			</div>
		</div>
		
		<div class="clearfix">
			<label>Dimensions</label>
			<div class="input">
				<div class="inline-inputs">
					<%= f.text_field :width, :class => "span2" %> (W) x <%= f.text_field :height, :class => "span2" %> (H)
				</div>
			</div>
		</div>
		
		<div class="clearfix">
			<%= f.label :owner %>
			<div class="input">
	      <% options = {'Users' => @users.map{|u| [u.name, "User-#{u.id}"]},
	                    'Groups' => @groups.map{|g| [g.name, "Group-#{g.id}"]}} %> 
	      <%= select_tag :owner, grouped_options_for_select(options, "#{@screen.owner_type}-#{@screen.owner_id}") %>
			</div>
		</div>
		
		<div class="clearfix">
			<label>Visibility</label>
			<div class="input">
				<ul class="inputs-list">
		      <li>
		        <%= f.check_box :is_public %> <%= f.label :is_public %>
		      </li>
		    </ul>
			</div>
    </div>

  </fieldset>

  <fieldset>
    <legend><span><%= t(:select_template) %></span></legend>

    <div class="clearfix">
      <label><%= t(:current_template) %></label>
      <div class="input">
        <% if @screen.template %>
        <ul class="GL inset-selection small">
          <li>
            <%= link_to "#" do %>
              <div class="cont">
                <p><b><%= @screen.template.name %></b></p>
                <p>by <%= @screen.template.author %></p>
              </div>
            <% end %>
          </li>
        </ul>
        <% else %>
        <h3>None Selected</h3>
        <% end %>
      </div>
    </div>

    <div class="clearfix">
      <label><%= t(:select_new_template) %></label>
      <div class="input">
        
        <ul class="GL inset-selection small">
          <% @templates.each do |template| %>
          <li>
            <%= link_to "#" do %>
              <%= f.radio_button :template_id, template.id %>
              <%= label_tag(:template_id, template.name) %>
              <div class="cont">
                <p><b><%= template.name %></b></p>
                <p>by <%= template.author %></p>
              </div>
            <% end %>
          </li>
          <% end %>
        </ul>

      </div>
    </div>
  </fieldset>
	
	<div class="submit_bar actions">
		<%= f.submit %>
	</div>
<% end %>

