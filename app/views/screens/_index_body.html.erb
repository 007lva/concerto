<div>
  <% if @screens.empty? %>
    <div class="default-padding">
      <h3><%= t('no_screens') %>
          <%= if ConcertoConfig['allow_user_screen_creation']
                user_signed_in? ? link_to( t('add_one'), new_screen_path) : link_to( t(:sign_in), new_user_session_path) + t('to_add')
              end %></h3>
    </div>
  <% else %>
    <% if !@my_screens.empty? %>
    <div class="subnav clearfix">
      <h4><%= t('my_screens') %></h4>
    </div>
    <ul class="list-grid">
      <% @my_screens.each do |screen| %>
        <li>
          <div class="cont thumb-icon">
            <%= link_to screen do %>
              <i class="icon-controller-screens"></i>
            <% end %>
          </div>
          <div class="cont">
            <p><b><%= link_to screen.name, screen %></b></p>
            <p><%= screen.location %></p>
            <p><%= screen.fields.count %> fields</p>
          </div>
        </li>
      <% end %>
    </ul>
    
    <% end %>
    <% other_screens = @screens - @my_screens %>
    <div class="subnav clearfix">
      <h4><%= t('other_screens') %></h4>
    </div>
    <ul class="list-grid">
      <% other_screens.each do |screen| %>
        <li>
          <div class="cont thumb-icon">
            <%= link_to screen do %>
              <i class="icon-controller-screens"></i>
            <% end %>
          </div>
          <div class="cont">
            <p><b><%= link_to screen.name, screen %></b></p>
            <p><%= screen.location %></p>
            <p><%= screen.fields.count %> fields</p>
          </div>
        </li>
      <% end %>
    </ul>
    
    
  <% end %>
</div>
